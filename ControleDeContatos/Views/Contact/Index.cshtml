@{
    ViewData["Title"] = "Contact List";
    var contacts = ViewBag.Contacts as List<ControleDeContatos.Controllers.Contact> ?? new List<ControleDeContatos.Controllers.Contact>();
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contact" asp-action="Create">Add new contact</a>
    </div>
    <br/>
    <h1 class="display-4">Contact list</h1>
    <p class="text-muted">Total contacts: @contacts.Count</p>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Phone</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (contacts.Count == 0)
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        <p>No contacts found. <a asp-controller="Contact" asp-action="Create">Add your first contact!</a></p>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var contact in contacts)
                {
                    <tr>
                        <th scope="row">@contact.Id</th>
                        <td>@contact.Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.Phone</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.Id">Edit</a>
                                <a role="button" class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
